<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space_one_unit">

    <ImageView
        android:id="@+id/iv_bullet"
        android:layout_width="@dimen/bullet_size"
        android:layout_height="@dimen/bullet_size"
        android:contentDescription="@string/bullet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_dot" />

    <TextView
        android:id="@+id/tv_ingredient"
        style="@style/DataTexts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_one_unit"
        android:layout_marginEnd="@dimen/space_one_unit"
        android:layout_marginStart="@dimen/space_two_units"
        android:layout_marginTop="@dimen/space_one_unit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_bullet"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
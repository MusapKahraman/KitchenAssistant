<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:paddingEnd="@dimen/space_one_unit"
    android:paddingStart="?android:attr/expandableListPreferredChildPaddingLeft">

    <ImageView
        android:id="@+id/iv_list_child"
        android:layout_width="@dimen/list_item_image_size"
        android:layout_height="@dimen/list_item_image_size"
        android:contentDescription="@string/recipe_image_description"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:srcCompat="@drawable/ic_menu_food" />

    <TextView
        android:id="@+id/tv_list_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_two_units"
        app:layout_constraintBottom_toBottomOf="@+id/iv_list_child"
        app:layout_constraintStart_toEndOf="@+id/iv_list_child"
        app:layout_constraintTop_toTopOf="@+id/iv_list_child" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="@dimen/list_button_size"
        android:layout_height="@dimen/list_button_size"
        android:background="@android:drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="@+id/iv_list_child"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_list_child" />

</android.support.constraint.ConstraintLayout>
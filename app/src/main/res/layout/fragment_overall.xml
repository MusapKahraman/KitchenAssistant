<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    tools:context=".fragments.RecipesFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/frame_empty"
            android:layout_width="@dimen/card_image_height"
            android:layout_height="@dimen/card_image_height"
            android:background="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_photo_icon"
            android:layout_width="@dimen/list_button_size"
            android:layout_height="@dimen/list_button_size"
            android:contentDescription="@string/add_a_picture"
            app:layout_constraintBottom_toBottomOf="@+id/frame_empty"
            app:layout_constraintEnd_toEndOf="@+id/frame_empty"
            app:layout_constraintStart_toStartOf="@+id/frame_empty"
            app:layout_constraintTop_toTopOf="@+id/frame_empty"
            app:srcCompat="@android:drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/tv_hint_click_to_add"
            style="@style/TextAppearance.Design.Hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_one_unit"
            android:layout_marginEnd="@dimen/space_one_unit"
            android:layout_marginStart="@dimen/space_one_unit"
            android:text="@string/click_to_add_a_picture"
            android:textSize="@dimen/text_size_new_recipe"
            app:layout_constraintBottom_toBottomOf="@+id/frame_empty"
            app:layout_constraintEnd_toEndOf="@+id/frame_empty"
            app:layout_constraintStart_toStartOf="@+id/frame_empty" />

        <ImageView
            android:id="@+id/iv_recipe_picture"
            android:layout_width="@dimen/card_image_height"
            android:layout_height="@dimen/card_image_height"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:contentDescription="@string/recipe_image_description"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_rotate"
            android:layout_width="@dimen/list_button_size"
            android:layout_height="@dimen/list_button_size"
            android:layout_marginStart="@dimen/space_one_unit"
            android:background="@android:drawable/ic_menu_rotate"
            app:layout_constraintStart_toEndOf="@+id/iv_recipe_picture"
            app:layout_constraintTop_toTopOf="@+id/iv_recipe_picture" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:errorEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_recipe_picture">

            <EditText
                android:id="@+id/text_edit_title"
                style="@style/RecipeEditTexts"
                android:hint="@string/recipe_title"
                android:imeOptions="actionNext" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:errorEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_layout_title">

            <AutoCompleteTextView
                android:id="@+id/text_edit_course"
                style="@style/RecipeEditTexts"
                android:hint="@string/recipe_title"
                android:imeOptions="actionNext" />
        </android.support.design.widget.TextInputLayout>

    </android.support.constraint.ConstraintLayout>

</ScrollView>